<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${test.ds.driver.class_name}" />
		<property name="url" value="${test.ds.url}" />
		<property name="username" value="${test.ds.user_name}" />
		<property name="password" value="${test.ds.password}" />
	</bean>

	<import resource="classpath:es/caib/pinbal/core/context/application-context-model.xml" />

</beans>
